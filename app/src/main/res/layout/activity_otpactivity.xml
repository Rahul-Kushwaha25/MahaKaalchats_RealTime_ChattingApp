<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_margin="25dp"
    android:weightSum="100"
    tools:context=".otpactivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="10">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="@string/_1"
                android:textSize="20sp"
                android:backgroundTint="@color/grey"
                android:background="@drawable/circular"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_margin="10dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="@string/_2"
                android:textSize="20sp"
                android:backgroundTint="@color/my_primary"
                android:background="@drawable/circular"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_margin="10dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="@string/_3"
                android:textSize="20sp"
                android:backgroundTint="@color/grey"
                android:background="@drawable/circular"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_margin="10dp"/>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="20"
        android:gravity="center">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/otp"
            android:layout_marginTop="20dp"
            app:tint="@color/my_primary"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sentotp"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/otp"
            android:textColorHint="@color/grey"
            android:textColor="@color/black"
            android:inputType="phone"
            android:padding="10dp"
            android:id="@+id/login_otp_edt"
            android:maxLength="6"
            android:layout_margin="10dp"
            android:background="@drawable/edit_rounder"
            android:elevation="5dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:gravity="center_vertical">


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NEXT"
            android:id="@+id/login_otp_next_btn"
            android:background="@drawable/buttun_rounder"/>



    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resend Otp in 30 sec."
        android:id="@+id/otp_resend_btn"
        android:gravity="center"/>




</LinearLayout>