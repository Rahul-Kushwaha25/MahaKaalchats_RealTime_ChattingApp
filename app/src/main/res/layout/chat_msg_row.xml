<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <LinearLayout
        android:id="@+id/left_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_rounder"
        android:backgroundTint="@color/leftchatmsg"
        android:padding="8dp"
        android:layout_marginEnd="80dp">

        <TextView
            android:id="@+id/left_msg_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="i m titan onnichai"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/right_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_rounder"
        android:backgroundTint="@color/rightchatmsg"
        android:padding="8dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp">

        <TextView
            android:id="@+id/right_msg_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="i m goku"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>


</RelativeLayout>